@layer components {
  .input {
    @apply transition;
    @apply rounded-lg shadow-md shadow-gold-500/20;
    @apply flex items-center justify-center w-full bg-transparent text-sm;
    @apply disabled:opacity-50 disabled:cursor-not-allowed;
    @apply border-gold-800 border-2 hover:border-gold-700 active:border-red-500 focus:border-red-500 focus:ring-opacity-20 focus:ring-2 focus:ring-red-500 focus:outline-none;
  }
  .input--default { @apply h-9 px-3; }
}
